{
    "documentTypeId": "chemicalPpeIssuanceForm",
    "name": "Chemical Protective Clothing Issuance Form",
    "fields": [
      {
        "id": "issueDate",
        "type": "date",
        "label": "Date of Issue",
        "required": true
      },
      {
        "id": "employeeName",
        "type": "text",
        "label": "Employee Name",
        "required": true
      },
      {
        "id": "employeeNumber",
        "type": "text",
        "label": "Employee Number",
        "required": true
      },
      {
        "id": "idNumber",
        "type": "text",
        "label": "ID Number",
        "required": true
      },
      {
        "id": "issuedItems",
        "type": "table",
        "label": "Protective Clothing Issued",
        "columns": [
          { "id": "item", "type": "text", "label": "Item" },
          { "id": "quantity", "type": "text", "label": "Quantity" },
          { "id": "condition", "type": "dropdown", "label": "Condition", "options": ["New", "Reissued"] }
        ],
        "defaultRows": [
          { "item": "Chemical-resistant gloves" },
          { "item": "Apron or chemical suit" },
          { "item": "Face shield / goggles" },
          { "item": "Respirator (if applicable)" },
          { "item": "Boots" }
        ]
      },
      {
        "id": "acknowledgment",
        "type": "paragraph",
        "label": "Acknowledgment",
        "description": "I acknowledge receipt of the items listed above and agree to wear them whenever handling chemicals."
      },
      {
        "id": "employeeSignature",
        "type": "signature",
        "label": "Employee Signature",
        "required": true
      },
      {
        "id": "issuerName",
        "type": "text",
        "label": "Issued By",
        "required": true
      },
      {
        "id": "issuerSignature",
        "type": "signature",
        "label": "Issuer Signature",
        "required": true
      }
    ]
  }
  